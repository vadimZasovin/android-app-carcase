<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleGuideStepView">
        <attr name="cgsv_size" format="dimension"/>
        <attr name="cgsv_stepsCount" format="integer"/>
        <attr name="cgsv_stepMargin" format="dimension"/>
        <attr name="cgsv_colorInactive" format="color"/>
        <attr name="cgsv_colorActive" format="color"/>
        <attr name="cgsv_styleActive" format="enum">
            <enum name="filled" value="0"/>
            <enum name="bordered" value="1"/>
        </attr>
        <attr name="cgsv_styleInactive" format="enum">
            <enum name="filled" value="0"/>
            <enum name="bordered" value="1"/>
        </attr>
        <attr name="cgsv_borderWidthActive" format="dimension"/>
        <attr name="cgsv_borderWidthInactive" format="dimension"/>
        <attr name="cgsv_animation" format="enum">
            <enum name="none" value="0"/>
            <enum name="move" value="1"/>
            <enum name="fade" value="2"/>
            <enum name="border_width" value="3"/>
        </attr>
    </declare-styleable>
</resources>