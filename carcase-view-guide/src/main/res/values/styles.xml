<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.CircleGuideStepView">
        <item name="cgsv_size">@dimen/default_size</item>
        <item name="cgsv_stepsCount">@integer/default_steps_count</item>
        <item name="cgsv_stepMargin">@dimen/default_step_margin</item>
        <item name="cgsv_colorInactive">@android:color/holo_green_light</item>
        <item name="cgsv_colorActive">@android:color/holo_green_dark</item>
        <item name="cgsv_animation">move</item>
        <item name="cgsv_borderWidthInactive">@dimen/default_border_width_inactive</item>
        <item name="cgsv_borderWidthActive">@dimen/default_border_width_active</item>
    </style>
    <style name="Widget.CircleGuideStepView.Filled">
        <item name="cgsv_styleInactive">filled</item>
        <item name="cgsv_styleActive">filled</item>
    </style>
    <style name="Widget.CircleGuideStepView.Bordered">
        <item name="cgsv_styleInactive">bordered</item>
        <item name="cgsv_styleActive">bordered</item>
    </style>
    <style name="Widget.CircleGuideStepView.ActiveFilledInactiveBordered">
        <item name="cgsv_styleInactive">bordered</item>
        <item name="cgsv_styleActive">filled</item>
    </style>
    <style name="Widget.CircleGuideStepView.ActiveBorderedInactiveFilled">
        <item name="cgsv_styleInactive">filled</item>
        <item name="cgsv_styleActive">bordered</item>
    </style>
</resources>